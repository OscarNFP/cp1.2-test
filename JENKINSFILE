pipeline{
    // Cualquier agente disponible podrá ejecutar el pipeline
    agent any

    // Estapas del pipeline
    stages{

        //Etapa para obtener el código fuente
        stage('Get Code'){
            // Paso para clonar el repositorio Git
            steps{
                git 'https://github.com/OscarNFP/cp1.2-test.git'
                sh 'echo $WORKSPACE'
            }
        }

        // Etapa de prueba de código estático
        stage('Static'){
            steps{
                sh '''
                    flake8 --exit-zero --format=pylint app > flake8.out
                '''
                recordIssues tools: [flake8(name: 'Flake8', pattern: 'flake8.out')], qualityGates: [[threshold: 9, type: 'TOTAL', unstable: true], [threshold: 11, type: 'TOTAL', unstable: false]]
            }

        }
        // Estapa de test de seguridad
        stage('Security Test') {
            steps{
                sh '''
                    bandit --exit-zero -r . -f custom -o bandit.out --msg-template "{abspath}:{line}: [{test_id}] {msg}"
                '''
                recordIssues tools: [pyLint(name: 'Bandit', pattern: 'bandit.out')], qualityGates: [[threshold: 1, type: 'TOTAL', unstable: true], [threshold: 2, type: 'TOTAL', unstable: false]]
            }
        }
        // Etapas (paralelas) de test unitarios y de integración
        stage('Test'){
            parallel
            {
                stage('Unit'){
                    steps{
                        catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE'){
                            sh '''
                                export PYTHONPATH=.
                                python3 -m coverage run --source=app --omit=app/__init__.py,app/api.py -m pytest --junitxml=result-unit.xml test/unit
                                python3 -m coverage xml
                            '''   
                        }
                    }

                }
                stage('Rest'){
                    steps{
                        sh '''
                            export FLASK_APP=app/api.py
                            flask run &
                            FLASK_PID=$!
                            java -jar /var/jenkins_home/wiremock-standalone-3.13.2.jar --port 9090 --root-dir test/wiremock &
                            WIREMOCK_PID=$!
                            export PYTHONPATH=$WORKSPACE
                            sleep 5
                            pytest --junitxml=result-rest.xml test/rest
                            kill $FLASK_PID
                            kill $WIREMOCK_PID
                        '''
                    }
                }
            }
        }
        
        // Etapa de cobertura, los datos los generamos en las pruebas unitarias evitando llamar dos veces a pytest
        // Aquí solo generamos el informe.
        stage('Coverage') {
            steps{
                recordCoverage qualityGates: [[criticality: 'ERROR', integerThreshold: 85, metric: 'LINE', threshold: 85.0] ,[integerThreshold: 95, metric: 'LINE', threshold: 95.0], [criticality: 'ERROR', integerThreshold: 80, metric: 'BRANCH', threshold: 80.0], [integerThreshold: 90, metric: 'BRANCH', threshold: 90.0]], tools: [[parser: 'COBERTURA', pattern: 'coverage.xml']]
            }
        }
        
       // Pruebas de rendimiento
       stage('Performance') {
            steps{
                sh '''
                    export FLASK_APP=app/api.py
                    flask run &
                    FLASK_PID=$!
                    sleep 5
                    /var/jenkins_home/apache-jmeter-5.6.3/bin/jmeter.sh -n -t test/jmeter/performance-test.jmx  -f -l flask.jtl
                    kill $FLASK_PID
                '''
                perfReport sourceDataFiles: 'flask.jtl'
            }
        } 
    }
}